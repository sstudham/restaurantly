  source 'https://rubygems.org'

  # application gems
  gem 'rails'
  gem 'pg' 
  gem 'thin' 

  # assets and views
  gem 'sass-rails' 
  gem 'uglifier' 
  gem 'coffee-rails' 
  gem 'therubyracer', platforms: :ruby
  gem 'jquery-rails'
  gem 'haml-rails'
  gem 'foundation-rails'

  group :test, :development do
    gem 'quiet_assets'
    gem "rspec-rails"
    gem 'factory_girl_rails' 
    gem 'capybara'
    gem 'pry'
    gem 'pry-byebug'
    gem 'selenium-webdriver'
    gem 'database_cleaner' 

  end

  group :doc do
    gem 'sdoc', require: false
  end